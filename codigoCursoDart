class Heroe {
  
  String nombre;
  String poder;
  
  Heroe( {
    required this.nombre, 
    required this.poder
   } );
  //
//     this.nombre = pNombre;
//     this.poder = pPoder;
 }
  
  
  String toString(){
    return 'Heroe: nombre: ${ this.nombre }, poder: ${ this.poder }';
  }
  
}
